    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
            @if(ViewBag.Categorias != null)
            {

                foreach(var cat in ViewBag.Categorias)
                {
                    string imageBase64 = Convert.ToBase64String(cat.imagen);
                    string imagenDataUrl = string.Format("data:image/png;base64,{0}", imageBase64);
            <div class="col">
                <div class="card" style="width: 18rem;">
                    
                    <img src="@imagenDataUrl" class="card-img-top" alt="Imagen">
                    <div class="card-body">
                        <h5 class="card-title">@cat.categoria</h5>
                        <p class="card-text">@cat.descripcion</p>
                        <a href="@Url.Action("Categoria", "Home", new { codigo_categoria = @cat.codigo_categoria })" class="btn btn-primary">Visitar Categoria</a>
                    </div>
                </div>
            </div>
            }



